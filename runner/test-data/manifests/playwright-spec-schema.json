{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Playwright Spec Schema",
  "type": "object",
  "required": ["meta", "steps"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "timeout": { "type": "integer" }
      }
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "action"],
        "properties": {
          "type": { "type": "string" },
          "action": { "type": "string" },
          "selector": { "type": "string" },
          "value": { "type": ["string", "null"] }
        }
      }
    }
  }
}